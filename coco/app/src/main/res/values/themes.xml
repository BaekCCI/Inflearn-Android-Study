<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- AppCompat 기반 메인 테마 -->
    <style name="Theme.Coco" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/red</item>
        <item name="android:statusBarColor">@color/red</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Coco.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/graph</item>
        <item name="postSplashScreenTheme">@style/Theme.Coco</item>
    </style>

</resources>
